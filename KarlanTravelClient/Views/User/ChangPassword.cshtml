
@{
    ViewBag.Title = "ChangPassword";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="col-md-5 mx-auto" style=" margin-top: 7%">
    <div class="passFrm" style="padding-left: 100px; padding-bottom: 100px">
        <h3>Change password</h3>
        <br />

        <form action="updatePass" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Current password</label>
                <br />
                @Html.Password("oldPass", null, new { Class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">New Password</label>
                <br />
                @Html.Password("newPass", null, new { Class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Confirm Password</label>
                <br />
                @Html.Password("rePass", null, new { Class = "form-control" })
            </div>
            <div class="form-group">
                <p class="text-center" style="color: red">@TempData["ErrorPass"]</p>
            </div>
            <div class="col-md-12 text-center ">
                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm" value="Apply">Apply</button>
            </div>



        </form>


    </div>
    </div>
