<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Visit</h6>
            <h3 class="hny-title">Popular Destinations</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var item in Model)
            {
                <div class="col-lg-6 subject-card mt-lg-0 mt-4">
                    <div class="subject-card-header p-4">
                        <a href="#" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="@item.TourImage" class="img-fluid" alt="@item.TourName" height="320">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">

                                    <div class="card-text">
                                        @item.TourName
                                    </div>
                                    <div class="card-text">
                                        @if (item.CategoryId1 != "UNCG")
                                        {
                                            @item.Category.CategoryName
                                        }
                                        -
                                        @if (item.CategoryId2 != "UNCG")
                                        {
                                            @item.Category1.CategoryName
                                        }
                                    </div>
                                    <div class="card-text">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        @item.TourRating/5
                                    </div>
                                    <div class="card-text">
                                        <i class="fa fa-usd" aria-hidden="true"></i>
                                        Price: @((int)item.TourPrice)
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            <!--//row-grids-->
        </div>
    </div>
</section>
